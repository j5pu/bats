#!/usr/bin/env shts
#shellcheck shell=bats

@test "$(shts::basename) " { shts::run; assert_success; }


@test "\$SHTS_COMMAND " { assert test -n "${SHTS_COMMAND}"; }

@test "\$SHTS_GATHER " { assert test -n "${SHTS_GATHER}"; }

@test "\$SHTS_OUTPUT " { assert test -n "${SHTS_OUTPUT}"; }

@test "\SHTS_TEST_DIR " {
  assert_dir_exist "${SHTS_TEST_DIR}";
  assert_equal "${SHTS_TEST_DIR}" "${SHTS_TOP}/tests";
}

@test "\$SHTS_TESTS " { assert test -n "${SHTS_TESTS}"; }
